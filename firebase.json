{
  "hosting": {
    "public": "build",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/static/css/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "31536000"
          }
        ]
      },
      {
        "source": "/static/js/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "31536000"
          }
        ]
      }
    ]
  }
}